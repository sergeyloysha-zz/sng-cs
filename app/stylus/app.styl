color-healthcare = #0A2239
color-watch = #5C707C
color-listen = #1E5F4C
color-attend = #054A29
color-community = #132E32

trs-function = cubic-bezier(.33,.66,.66,1)

mediaMin(minWidth)
  @media screen and (min-width: minWidth)
    {block}
mediaBetween(minWidth, maxWidth)
  @media screen and (min-width: minWidth) and (max-width: maxWidth)
